<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="form" uri="http://www.springframework.org/tags/form"%>
<%@ taglib prefix="ui" uri="http://egovframework.gov/ctl/ui"%>
<%@ taglib prefix="spring" uri="http://www.springframework.org/tags"%>
<!DOCTYPE html>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<html>
<link href="http://fonts.googleapis.com/earlyaccess/hanna.css" rel="stylesheet">
<style>
	#div1{
		width: 500px; 
		height: 560px; 
		/* background-color: #e9ecef; */
		background: linear-gradient(#e9ecef 50%, #191970 50%);
		margin-left: 140px; margin-top: 28px; 
		border-radius: 25px;
		float: left;
		
	}
	#div2{
		width: 600px; 
		height: 560px; 
		background-color: #e9ecef;
		margin-left: 100px; margin-top: 28px; 
		border-radius: 25px;
		float: left;
	}
	#pwdCh, #myPage, #name, h5, h6, #btn{font-family: 'Hanna', sans-serif;}
	#name{
		margin-top: 15px;
		text-align: center;
		color: black;	
	}
	#pwdCh{
		margin-top: 20px;
		margin-left: 30px;
		color: black;
	}
	#memId{
		margin-left:20px;
		color: white;
		margin-top: 150px;
		text-align: center;
	}
</style>

<body>
	<script type="text/javascript" src="/resources/js/jquery.min.js"></script>
	<div style="width: 96%;">
	<div class="card shadow mb-4" style="width: 98%;">
		<div class="card-header py-3"><!--마이페이지 글씨 써있는 부분  -->
			<h1 class="m-0 font-weight-bold text-primary" id="myPage" style="text-align: center;">
				MY PAGE <br>
			</h1>

		</div>

	<input name="memId" type="hidden" value="${memberVo.memId}">
		<div class="card-body"><!--내용 흰색 칸  -->
			<div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4"><!--흰색 칸안의칸  -->
			
			<div id="div1">
				<div style="margin-top: 20px;">
					<h2 id="name">${memberVo.name}</h2> <!-- 이름  -->
					<h6 style="text-align: center; margin-top: 10px; color: black;">???학과 &nbsp;&nbsp;|&nbsp;&nbsp; ??학년</h6><!-- 학과  -->
					<h6 style="text-align: center; color: black;">I D : ${memberVo.memId}</h6> <!-- 학번  -->
				</div>
				<hr>
				<div id="link" style="margin-top: 35px;">
					<a href="/common/myPage/myPageUpdate?memId=${memberVo.memId}" class="btn btn-primary btn-icon-split" style="margin-left: 150px; float:left; border: white; background-color:#e9ecef; display: inline-block ;">
						<img src="/resources/img/pro.png" alt="사람" width="80px;" >
					</a>
					
					<a href="/common/calendar/myCalendar?memId=${memberVo.memId}" class="btn btn-primary btn-icon-split" style="float:left; border: white; color:#e9ecef; background-color: #e9ecef; padding-left: 30px;">
						<img src="/resources/img/cal.png" alt="달력" width="88px;" >
					</a>
				</div>

				
				<div id="memId">							
					<hr>
					<h5 style="margin-top: 30px;">TEL : ${memberVo.phNum}</h5> <!-- 연락처  -->
						<hr>
					<h5>Email : ${memberVo.email}</h5> <!-- 이메일  -->
						<hr>
					<h5>주소 : ${memberVo.addr}</h5> <!-- 주소  -->
						<hr>					
					<h5>계좌 : ${memberVo.bankAccntNum}</h5> <!-- 주소  -->
						<hr>				
				</div>
			</div>
			
			
			<!-- 2번째 박스 -->
			<div id="div2">
				<div style="margin-top: 60px;">
					<h2 id="pwdCh">-비밀번호 변경 사항</h2>
				</div>
				<br>
				<div>
					<h5 style="margin-left: 30px; color: #191970;">최근 변경일 </h5>
					<h5 style="margin-left: 30px; color: #808080;">- <fmt:formatDate pattern=" MM/dd/yyyy hh:mm:ss a" value="${memberVo.modDate}"/> -</h5>
				</div>
				<br><br>
				<h2 id="pwdCh">-비밀번호 변경 하기</h2>
				<br>
				<h5 style="margin-left: 20px; color: #191970;">기존 비밀번호</h5>
				<input type="password" style="margin-left: 30px; width: 250px;"> &nbsp;&nbsp; <button type="button" id="btn" >비밀번호 확인</button>
				<br><br>
				<h5 style="margin-left: 20px; color: #191970;">변경 할 비밀번호</h5>
				<input type="password" value="${memberVo.pwd}" style="margin-left: 30px; width: 250px;"> &nbsp;&nbsp; <button type="button" id="btn" >변경</button>
				
			</div>			
			</div><!--흰색 칸안의 칸  -->
		</div><!--내용 흰색 칸  -->
	</div>
	<br><br>
</div>
	<script type="text/javascript" src="/resources/js/ddit.min.js"></script>

</body>
</html>